;infl-imp-verb-word &
;[ ARGS < [ INFLECTION nonfstr ] > ].

; spørre-spør! gjemme-gjem!

s-passive_s_infl_rule := 
%suffix (* s)
s-pass-word.

; also finstr verbs undergo this
;s-passive_s_infl_rule := 
;%suffix (* s)
;s-pass-word & 
;  [ ARGS.FIRST.INFLECTION nonfstr ].

s-passive_es_infl_rule := 
%suffix (* es)
s-pass-word & 
  [ ARGS.FIRST.INFLECTION finstr ].


;interjection_infl_rule := 
;interjection-word.
